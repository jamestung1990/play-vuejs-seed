# Map static resources from the /public folder to the /assets URL path

# Home page
GET   /                          controllers.AppController.index
GET   /time-entries              controllers.AppController.timeEntries

# Components         
GET   /components/app           controllers.ComponentsController.app
GET   /components/home           controllers.ComponentsController.home
GET   /components/log-time       controllers.ComponentsController.logTime
GET   /components/sidebar       controllers.ComponentsController.sidebar
GET   /components/time-entries   controllers.ComponentsController.timeEntries

GET   /assets/*file              controllers.Assets.versioned(path="/public", file: Asset)

GET   /webjars/*file             controllers.WebJarAssets.at(file)